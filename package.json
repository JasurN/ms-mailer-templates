{
  "name": "ms-mailer-templates",
  "description": "Templates for mailer microservice",
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "npm run build && babel ./src -d ./lib",
    "test": "npm run lint && npm run build && NODE_ENV=development mocha -r babel-register",
    "lint": "eslint ./src",
    "build": "node -r babel-register ./node_modules/.bin/gulp production",
    "build-local": "node -r babel-register ./node_modules/.bin/gulp watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-mailer-templates.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer-templates/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer-templates#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "common-errors": "^1.0.0",
    "handlebars": "^4.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "chai": "^3.4.0",
    "cz-conventional-changelog": "^1.1.6",
    "datauri": "^1.0.0-alpha.5",
    "del": "^2.2.2",
    "eslint": "^3.3.1",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-mocha": "^4.3.0",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.2.2",
    "gulp-connect": "^5.0.0",
    "gulp-htmlmin": "^2.0.0",
    "gulp-imagemin": "^3.0.3",
    "gulp-inline-css": "^3.0.0",
    "gulp-inline-source": "^3.0.0",
    "gulp-preprocess": "^2.0.0",
    "imagemin-pngcrush": "^5.0.0",
    "mocha": "^3.0.2",
    "semantic-release": "^4.3.5"
  },
  "release": {
    "verifyConditions": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
