{
  "name": "ms-mailer-templates",
  "version": "0.0.1",
  "description": "Templates for mailer microservice",
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "npm run build && babel ./src -d ./lib --optional es7.objectRestSpread,es7.classProperties,es7.decorators",
    "test": "npm rebuild && NODE_ENV=production ./node_modules/.bin/mocha --require ./test/babelhook.js --bail -R xunit > test-report-$(node -v).xml",
    "test-local": "npm run build && NODE_ENV=development ./node_modules/.bin/mocha --require ./test/babelhook.js",
    "build": "node -r ./test/babelhook.js ./node_modules/.bin/gulp production",
    "build-local": "node -r ./test/babelhook.js ./node_modules/.bin/gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makeomatic/ms-mailer-templates.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer-templates/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer-templates#readme",
  "dependencies": {
    "common-errors": "^0.5.3",
    "handlebars": "^4.0.5"
  },
  "devDependencies": {
    "babel-core": "^5.8.33",
    "babel-eslint": "^4.1.4",
    "chai": "^3.4.0",
    "datauri": "^1.0.0-alpha.5",
    "del": "^2.1.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.0.0",
    "eslint-plugin-mocha": "^1.0.0",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.0.0",
    "gulp-connect": "^2.2.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-inline-css": "^3.0.0",
    "gulp-inline-source": "^2.1.0",
    "gulp-preprocess": "^2.0.0",
    "imagemin-pngcrush": "^4.1.0",
    "mocha": "^2.3.4"
  }
}
