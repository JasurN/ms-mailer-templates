{
  "name": "ms-mailer-templates",
  "description": "Templates for mailer microservice",
  "main": "./lib/index.js",
  "scripts": {
    "prepublish": "npm run build && babel ./src -d ./lib",
    "test": "npm run lint && npm run build && NODE_ENV=development mocha -r babel-register",
    "lint": "eslint ./src",
    "build": "node -r babel-register ./node_modules/.bin/gulp production",
    "dev": "node -r babel-register ./node_modules/.bin/gulp watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-mailer-templates.git"
  },
  "author": "Vitaly Aminev <v@makeomatic.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-mailer-templates/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-mailer-templates#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "common-errors": "^1.0.4",
    "handlebars": "^4.0.11"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.0.0",
    "datauri": "^1.0.0-alpha.5",
    "del": "^3.0.0",
    "eslint": "4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.4.0",
    "gulp-connect": "^5.0.0",
    "gulp-htmlmin": "^3.0.0",
    "gulp-imagemin": "^3.4.0",
    "gulp-inline-css": "^3.0.0",
    "gulp-inline-source": "^3.1.0",
    "gulp-preprocess": "^2.0.0",
    "imagemin-pngcrush": "^5.1.0",
    "mocha": "^4.0.1",
    "semantic-release": "^8.2.0"
  },
  "release": {
    "verifyConditions": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
